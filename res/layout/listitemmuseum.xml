<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="match_parent">
	<ImageView android:id="@+id/thumb" android:layout_width="48dip"
		android:layout_height="48dip" 
		android:layout_margin="5dip"
		/>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/museumname"
			android:layout_gravity="left" android:layout_height="33dip"
			android:layout_width="fill_parent" 
			android:layout_marginTop="5dip"/>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:gravity="right"
			android:layout_gravity="right"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/museumdistance"
				android:layout_gravity="right" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<ImageView android:id="@+id/compass"
				android:layout_gravity="right" android:layout_width="10dip"
				android:layout_height="10dip" 
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
