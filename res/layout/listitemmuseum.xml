<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="match_parent" android:addStatesFromChildren="false">
	<ImageView android:id="@+id/thumb" android:layout_width="48dip"
		android:layout_height="48dip" 
		android:layout_margin="5dip"
		/>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/museumname"
			android:layout_gravity="left" android:layout_height="33dip"
			android:layout_width="fill_parent" 
			android:layout_marginTop="5dip"/>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:gravity="right"
			android:layout_gravity="right"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/museumdistance"
				android:layout_gravity="right" android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				 />
			<RelativeLayout android:layout_marginLeft="11dip"
					android:layout_marginRight="11dip" 
					android:scaleType="centerInside" android:layout_height="17dip" android:layout_width="17dip">
    			<ImageView android:id="@+id/compass"
    			android:layout_gravity="center"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:scaleType="center"/>
    		</RelativeLayout>
			
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
